<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Official website of Michael Cressey, with music, videos, tour dates and more.">
    <title>@ViewBag.Title - Mike Cressey</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/vegas.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Mike Cressey", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!-- li>@@Html.ActionLink("Home", "Index", "Home")</!li -->
                    <li>@Html.ActionLink("Music", "Music", "Home")</li>
                    <li>@Html.ActionLink("Videos", "Videos", "Home")</li>
                    <li>@Html.ActionLink("Photos", "Photos", "Home")</li>
                    <li>@Html.ActionLink("Shows", "Index", "Gigs")</li>
                    <!-- @@if (User.Identity.IsAuthenticated)
        {-->
                    <li>@Html.ActionLink("FREE", "FreeStuff", "Home"/*, null, new { @class = "disabled" }*/)</li>
                    <!--}-->
                    <li>@Html.ActionLink("Studio", "Studio", "Home")</li>
                    <li>@Html.ActionLink("Bio", "About", "Home")</li>
                    <!-- li>@@Html.ActionLink("Contact", "Contact", "Home")</li -->
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Users", "Index", "RegisteredUsers")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer  class="text-center">
            <strong>Contact:</strong> <a href="mailto:mikecressey@gmail.com">mikecressey@gmail.com</a><br />
            <p>&copy; @DateTime.Now.Year - MikeCressey.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/vegas.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
